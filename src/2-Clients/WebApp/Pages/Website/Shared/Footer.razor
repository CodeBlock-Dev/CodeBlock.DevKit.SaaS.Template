@inject ApplicationSettings ApplicationSettings

<footer class="footer">
    <div class="container">
        <div class="text-center py-4">
            <div class="mb-4">
                <div class="d-flex align-items-center justify-content-center mb-3">
                    <img src="/images/logos/logo.png" alt="@ApplicationSettings.Localized.Name" height="30" class="me-2" />
                    <span class="fs-5 fw-bold" style="background: var(--gradient-primary); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">@ApplicationSettings.Localized.Name</span>
                </div>

                <div class="social-links">
                    <a href="#" class="text-secondary me-4" title="Twitter" style="font-size: 1.5rem; transition: color 0.3s ease;">
                        <i class="bi bi-twitter"></i>
                    </a>
                    <a href="#" class="text-secondary me-4" title="LinkedIn" style="font-size: 1.5rem; transition: color 0.3s ease;">
                        <i class="bi bi-linkedin"></i>
                    </a>
                    <a href="#" class="text-secondary me-4" title="GitHub" style="font-size: 1.5rem; transition: color 0.3s ease;">
                        <i class="bi bi-github"></i>
                    </a>
                    <a href="#" class="text-secondary" title="Discord" style="font-size: 1.5rem; transition: color 0.3s ease;">
                        <i class="bi bi-discord"></i>
                    </a>
                </div>

                <a href="/terms-of-service" class="text-secondary text-decoration-none" style="font-size: 0.7rem; transition: color 0.3s ease;">
                    @WebAppLocalizer[WebAppResource.TermsOfService]  |
                </a> 
                <a href="/privacy-policy" class="text-secondary text-decoration-none" style="font-size: 0.7rem; transition: color 0.3s ease;">
                    @WebAppLocalizer[WebAppResource.PrivacyPolicy]
                </a>
                <p class="text-secondary" style="font-size: 0.7rem; transition: color 0.3s ease;">@ApplicationSettings.Default.SupportEmail</p>

            </div>
        </div>
    </div>
</footer>