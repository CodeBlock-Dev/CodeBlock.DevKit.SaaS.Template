@using CanBeYours.WebApp.Pages.Shared
@using Microsoft.AspNetCore.Hosting
@using Microsoft.AspNetCore.Mvc.ViewEngines
@using CodeBlock.DevKit.Web.Localization
@inject LocalizationSettings LocalizationSettings

<!DOCTYPE html>
<html dir="@LocalizationSettings.GetCurrentLanguageDirection()" lang="@LocalizationSettings.GetCurrentLanguageCode()" style="font-family: @LocalizationSettings.GetCurrentLanguageFont() !important">
<head>
    <title>@ViewData["Title"]</title>
    <component Type="typeof(HeadTags)" render-mode="ServerPrerendered" />
    <base href="~/" />
    <link href="css/cb.website.nspa.@(LocalizationSettings.GetCurrentLanguageDirection().ToLower()).min.css" rel="stylesheet" asp-append-version="true" />
</head>
<body class="bg-primary" style="font-family: @LocalizationSettings.GetCurrentLanguageFont() !important">

    <div id="waves-background" class="background-animation"></div>

    <component Type="typeof(NavMenu)" render-mode="ServerPrerendered"/>

    <div class="sticky-top background-none p-0 h1">
        <div class="card-body">
            <component Type="typeof(NavMenuBtn)" render-mode="ServerPrerendered" />
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="d-flex flex-column min-vh-90 justify-content-center align-items-center">
        @RenderBody()
    </div>

    <script src="js/cb.website.nspa.min.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>

